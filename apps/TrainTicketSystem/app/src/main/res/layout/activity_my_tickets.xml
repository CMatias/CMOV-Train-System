<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:background="@drawable/intro_bg_2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/backBar"
            android:gravity="top">

            <!--ImageButton
                android:layout_width="45dp"
                android:layout_height="32dp"
                android:id="@+id/imageButton"
                android:src="@mipmap/arrow_back"
                android:background="#00000000"
                android:layout_marginTop="5dp" /-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvWelcome"
                android:layout_marginLeft="50dp"
                android:textColor="#ccc"
                android:text="My Tickets" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="99dp"
            android:id="@+id/topBar"
            android:weightSum="1"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_bg_pressed"
            android:layout_marginBottom="25dp">

            <ImageView
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:src="@drawable/mytickets" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="296dp">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/listView" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/footer"
                android:id="@+id/tvFooter"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:gravity="bottom|center_horizontal"
                android:layout_gravity="bottom" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

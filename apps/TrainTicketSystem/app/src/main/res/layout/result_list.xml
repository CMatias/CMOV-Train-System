<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/button_bg_unpressed"
    android:weightSum="1">

    <ImageView
        android:id="@+id/ivBuyTicket"
        android:layout_gravity="center"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/buyticket"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tvFromTo"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:textSize="12dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tvPriceDuration"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="12dp"
        android:text="TextView"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.36"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/tvSeat"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="16dp"
        android:text="Pick\nSeat"
        android:textColor="#a92f1a"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical|center_horizontal" />

</LinearLayout>
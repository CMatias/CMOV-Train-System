<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:background="@drawable/intro_bg_2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/backBar"
            android:gravity="top">

            <!--ImageButton
                android:layout_width="45dp"
                android:layout_height="32dp"
                android:id="@+id/imageButton"
                android:src="@mipmap/arrow_back"
                android:background="#00000000"
                android:layout_marginTop="5dp" /-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvWelcome"
                android:layout_marginLeft="50dp"
                android:textColor="#ccc" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="99dp"
            android:id="@+id/topBar"
            android:weightSum="1"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_bg_pressed"
            android:layout_marginBottom="25dp">

            <ImageView
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:src="@drawable/user_default" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/browseOptions"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:id="@+id/browseTicketsButtonHolder"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FIND TRIP"
                android:id="@+id/bFindTrip"
                android:background="@drawable/button_bg"
                android:textColor="#a92f1a"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:id="@+id/myTicketsButtonHolder"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MY TICKETS"
                android:id="@+id/bMyTickets"
                android:background="@drawable/button_bg"
                android:textColor="#a92f1a"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:id="@+id/settingsButtonHolder"
            android:gravity="center_vertical|center_horizontal" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SETTINGS"
                android:id="@+id/bSettings"
                android:background="@drawable/button_bg"
                android:textColor="#a92f1a"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/footer"
                android:id="@+id/tvFooter"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:gravity="bottom|center_horizontal" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
